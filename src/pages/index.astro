---
import BaseLayout from '../layouts/BaseLayout.astro';
import { Icon } from 'astro-icon/components';
import SeoTestimonials from '../components/SeoTestimonials.astro';
import { business, yearsInBusiness } from '../data/business';
import { serviceTypes } from '../data/serviceTypes';
import { serviceAreas } from '../data/serviceAreas';
import { serviceUrl, areaUrl, contactUrl, aboutUrl } from '../lib/urls';

const title = 'Great Yarmouth Plumbers | Norfolk Plumber';
const description = 'Great Yarmouth Plumbers provides reliable plumbing services across Norfolk. Emergency repairs, boiler service, drain cleaning and more. Call 01493 334000.';
const years = yearsInBusiness();

const stats = [
  { value: `${years}+`, label: 'Years Experience', icon: 'lucide:award' },
  { value: '24/7', label: 'Emergency Service', icon: 'lucide:clock' },
  { value: `${serviceTypes.length}`, label: 'Services Offered', icon: 'lucide:wrench' },
  { value: `${serviceAreas.length}`, label: 'Areas Served', icon: 'lucide:map-pin' },
];

const steps = [
  { number: '1', title: 'Call Us', description: 'Ring us on 01493 334000 or fill out our online form. We respond quickly to every enquiry.', icon: 'lucide:phone' },
  { number: '2', title: 'Assessment', description: 'Our plumber arrives at your property, assesses the problem and provides a clear, upfront quote.', icon: 'lucide:clipboard-check' },
  { number: '3', title: 'Fix It', description: 'We carry out the repair or installation to the highest standard, keeping your home clean and tidy.', icon: 'lucide:wrench' },
  { number: '4', title: 'Guaranteed', description: 'All work is guaranteed. We follow up to make sure you are completely satisfied with the result.', icon: 'lucide:shield-check' },
];
---

<BaseLayout {title} {description}>
  <!-- JSON-LD Schema -->
  <Fragment slot="head">
    <script type="application/ld+json" set:html={JSON.stringify({
      '@context': 'https://schema.org',
      '@graph': [
        {
          '@type': 'WebSite',
          '@id': `${business.website}/#website`,
          url: business.website,
          name: business.name,
          description: business.description,
          publisher: { '@id': `${business.website}/#business` },
        },
        {
          '@type': business.schemaType,
          '@id': `${business.website}/#business`,
          name: business.name,
          legalName: business.legalName,
          url: business.website,
          telephone: business.phone,
          email: business.email,
          founder: {
            '@type': 'Person',
            name: business.owner,
          },
          foundingDate: String(business.yearEstablished),
          address: {
            '@type': 'PostalAddress',
            streetAddress: business.address.street,
            addressLocality: business.address.city,
            addressRegion: business.address.county,
            postalCode: business.address.postcode,
            addressCountry: 'GB',
          },
          geo: {
            '@type': 'GeoCoordinates',
            latitude: business.coordinates.lat,
            longitude: business.coordinates.lng,
          },
          openingHoursSpecification: [
            {
              '@type': 'OpeningHoursSpecification',
              dayOfWeek: ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday'],
              opens: '08:00',
              closes: '18:00',
            },
          ],
          areaServed: serviceAreas.map((a) => ({
            '@type': 'City',
            name: a.name,
          })),
          hasOfferCatalog: {
            '@type': 'OfferCatalog',
            name: 'Plumbing Services',
            itemListElement: serviceTypes.map((s) => ({
              '@type': 'Offer',
              itemOffered: {
                '@type': 'Service',
                name: s.name,
                description: s.shortDescription,
              },
            })),
          },
        },
        {
          '@type': 'WebPage',
          '@id': `${business.website}/`,
          url: `${business.website}/`,
          name: title,
          description: description,
          isPartOf: { '@id': `${business.website}/#website` },
          about: { '@id': `${business.website}/#business` },
        },
      ],
    })} />
  </Fragment>

  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-brand-900 to-brand-800 text-white overflow-hidden">
    <div class="absolute inset-0 opacity-10">
      <div class="absolute inset-0 bg-[radial-gradient(circle_at_30%_50%,rgba(255,255,255,0.15),transparent_70%)]"></div>
    </div>
    <div class="relative mx-auto max-w-7xl px-4 py-20 sm:px-6 sm:py-28 lg:px-8 lg:py-36">
      <div class="max-w-3xl">
        <p class="mb-4 inline-block rounded-full bg-white/10 px-4 py-1.5 text-sm font-medium tracking-wide text-brand-200 backdrop-blur-sm">
          Serving Great Yarmouth &amp; Norfolk Since {business.yearEstablished}
        </p>
        <h1 class="text-4xl font-extrabold tracking-tight sm:text-5xl lg:text-6xl">
          Trusted Plumbers in<br />
          <span class="text-amber-400">Great Yarmouth</span>
        </h1>
        <p class="mt-6 max-w-2xl text-lg leading-relaxed text-brand-100 sm:text-xl">
          {business.tagline}. From emergency repairs to full installations, our experienced team delivers reliable plumbing solutions for homes and businesses across Norfolk.
        </p>
        <div class="mt-10 flex flex-col gap-4 sm:flex-row">
          <a
            href={business.phoneHref}
            class="inline-flex items-center justify-center gap-2 rounded-lg bg-amber-500 px-8 py-4 text-lg font-bold text-brand-900 shadow-lg transition hover:bg-amber-400 hover:shadow-xl focus:outline-none focus:ring-2 focus:ring-amber-400 focus:ring-offset-2 focus:ring-offset-brand-900"
          >
            <Icon name="lucide:phone" class="h-5 w-5" />
            Call {business.phone}
          </a>
          <a
            href={contactUrl()}
            class="inline-flex items-center justify-center gap-2 rounded-lg border-2 border-white/30 bg-white/10 px-8 py-4 text-lg font-bold text-white backdrop-blur-sm transition hover:bg-white/20 focus:outline-none focus:ring-2 focus:ring-white/50"
          >
            <Icon name="lucide:message-square" class="h-5 w-5" />
            Get a Free Quote
          </a>
        </div>
        <!-- Trust badges -->
        <div class="mt-10 flex flex-wrap items-center gap-6 text-sm text-brand-200">
          <span class="flex items-center gap-2">
            <Icon name="lucide:shield-check" class="h-5 w-5 text-amber-400" />
            Fully Insured
          </span>
          <span class="flex items-center gap-2">
            <Icon name="lucide:clock" class="h-5 w-5 text-amber-400" />
            24/7 Emergency
          </span>
          <span class="flex items-center gap-2">
            <Icon name="lucide:badge-check" class="h-5 w-5 text-amber-400" />
            {years}+ Years Experience
          </span>
        </div>
      </div>
    </div>
  </section>

  <!-- Stats Bar -->
  <section class="relative z-10 -mt-8">
    <div class="mx-auto max-w-5xl px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-2 gap-1 overflow-hidden rounded-2xl bg-white shadow-xl lg:grid-cols-4">
        {stats.map((stat) => (
          <div class="flex flex-col items-center justify-center p-6 text-center">
            <Icon name={stat.icon} class="mb-2 h-8 w-8 text-brand-600" />
            <span class="text-3xl font-extrabold text-brand-900">{stat.value}</span>
            <span class="mt-1 text-sm font-medium text-gray-500">{stat.label}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Services Grid -->
  <section class="bg-gray-50 py-20">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h2 class="text-3xl font-extrabold text-gray-900 sm:text-4xl">Our Plumbing Services</h2>
        <p class="mx-auto mt-4 max-w-2xl text-lg text-gray-600">
          We offer a full range of plumbing services for homes and businesses across Great Yarmouth and Norfolk. Whatever the job, we have the skills and tools to get it done right.
        </p>
      </div>
      <div class="mt-12 grid gap-6 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
        {serviceTypes.map((service) => (
          <a
            href={serviceUrl(service.slug)}
            class="group flex flex-col rounded-xl bg-white p-6 shadow-md ring-1 ring-gray-100 transition hover:-translate-y-1 hover:shadow-lg"
          >
            <div class="mb-4 flex h-12 w-12 items-center justify-center rounded-lg bg-brand-50 text-brand-600 transition group-hover:bg-brand-600 group-hover:text-white">
              <Icon name={service.icon} class="h-6 w-6" />
            </div>
            <h3 class="text-lg font-bold text-gray-900 group-hover:text-brand-700">{service.name}</h3>
            <p class="mt-2 flex-1 text-sm leading-relaxed text-gray-600">{service.shortDescription}</p>
            {service.emergency && (
              <span class="mt-3 inline-flex w-fit items-center gap-1 rounded-full bg-red-50 px-2.5 py-0.5 text-xs font-semibold text-red-700">
                <Icon name="lucide:zap" class="h-3 w-3" />
                24/7 Emergency
              </span>
            )}
            <span class="mt-4 inline-flex items-center gap-1 text-sm font-semibold text-brand-600 group-hover:text-brand-700">
              Learn more
              <Icon name="lucide:arrow-right" class="h-4 w-4 transition group-hover:translate-x-1" />
            </span>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- How It Works -->
  <section class="bg-white py-20">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h2 class="text-3xl font-extrabold text-gray-900 sm:text-4xl">How It Works</h2>
        <p class="mx-auto mt-4 max-w-2xl text-lg text-gray-600">
          Getting your plumbing sorted is simple. Here is how we work from your first call to job completion.
        </p>
      </div>
      <div class="mt-16 grid gap-8 sm:grid-cols-2 lg:grid-cols-4">
        {steps.map((step) => (
          <div class="relative text-center">
            <div class="mx-auto mb-6 flex h-16 w-16 items-center justify-center rounded-full bg-brand-600 text-white shadow-lg">
              <Icon name={step.icon} class="h-8 w-8" />
            </div>
            <span class="absolute -top-2 left-1/2 -translate-x-1/2 rounded-full bg-amber-400 px-2.5 py-0.5 text-xs font-bold text-brand-900">
              Step {step.number}
            </span>
            <h3 class="text-xl font-bold text-gray-900">{step.title}</h3>
            <p class="mt-3 text-sm leading-relaxed text-gray-600">{step.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Areas Section -->
  <section class="bg-gray-50 py-20">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h2 class="text-3xl font-extrabold text-gray-900 sm:text-4xl">Areas We Serve</h2>
        <p class="mx-auto mt-4 max-w-2xl text-lg text-gray-600">
          We provide plumbing services across Great Yarmouth and the surrounding Norfolk and Suffolk areas. Wherever you are, we can help.
        </p>
      </div>
      <div class="mt-12 grid gap-4 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
        {serviceAreas.map((area) => (
          <a
            href={areaUrl(area.slug)}
            class="group flex items-center gap-4 rounded-xl bg-white p-5 shadow-sm ring-1 ring-gray-100 transition hover:-translate-y-0.5 hover:shadow-md"
          >
            <div class="flex h-10 w-10 shrink-0 items-center justify-center rounded-full bg-brand-50 text-brand-600 transition group-hover:bg-brand-600 group-hover:text-white">
              <Icon name="lucide:map-pin" class="h-5 w-5" />
            </div>
            <div>
              <h3 class="font-bold text-gray-900 group-hover:text-brand-700">{area.name}</h3>
              <p class="text-sm text-gray-500">{area.county}</p>
            </div>
            <Icon name="lucide:chevron-right" class="ml-auto h-5 w-5 text-gray-300 transition group-hover:text-brand-600" />
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Full-Width CTA Banner -->
  <section class="bg-brand-900 py-16">
    <div class="mx-auto max-w-4xl px-4 text-center sm:px-6 lg:px-8">
      <h2 class="text-3xl font-extrabold text-white sm:text-4xl">Need a Plumber? Call Us Today</h2>
      <p class="mx-auto mt-4 max-w-2xl text-lg text-brand-200">
        Whether it is an emergency or a planned job, our friendly team is ready to help. Get in touch now for a free, no-obligation quote.
      </p>
      <div class="mt-8 flex flex-col items-center justify-center gap-4 sm:flex-row">
        <a
          href={business.phoneHref}
          class="inline-flex items-center gap-2 rounded-lg bg-amber-500 px-8 py-4 text-lg font-bold text-brand-900 shadow-lg transition hover:bg-amber-400"
        >
          <Icon name="lucide:phone" class="h-5 w-5" />
          {business.phone}
        </a>
        <a
          href={contactUrl()}
          class="inline-flex items-center gap-2 rounded-lg border-2 border-white/30 bg-white/10 px-8 py-4 text-lg font-bold text-white transition hover:bg-white/20"
        >
          <Icon name="lucide:message-square" class="h-5 w-5" />
          Request a Quote
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
