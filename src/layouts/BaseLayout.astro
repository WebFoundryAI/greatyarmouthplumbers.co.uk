---
import SEO from '../components/SEO.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

export interface Props {
  title: string;
  description: string;
  canonicalUrl?: string;
  ogImage?: string;
  schema?: Record<string, unknown> | Record<string, unknown>[];
  noindex?: boolean;
}

const { title, description, canonicalUrl, ogImage, schema, noindex } = Astro.props;

// TODO: Add Google Analytics once a real GA4 Measurement ID is available.
// Paste the gtag.js snippet below the font <link> tags in the <head>, e.g.:
//   <script async src="https://www.googletagmanager.com/gtag/js?id=G-XXXXXXXXXX"></script>
//   <script>window.dataLayer=window.dataLayer||[];function gtag(){dataLayer.push(arguments)}gtag('js',new Date());gtag('config','G-XXXXXXXXXX');</script>
---

<!doctype html>
<html lang="en-GB" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" href="/favicon.svg" />
    <meta name="theme-color" content="#1e3a8a" />
    <meta name="generator" content={Astro.generator} />

    <!-- Google Fonts: DM Serif Display + DM Sans (non-render-blocking) -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,100..1000;1,9..40,100..1000&family=DM+Serif+Display&display=swap"
      rel="stylesheet"
      media="print"
      onload="this.media='all'"
    />
    <noscript>
      <link
        href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,100..1000;1,9..40,100..1000&family=DM+Serif+Display&display=swap"
        rel="stylesheet"
      />
    </noscript>

    <SEO
      title={title}
      description={description}
      canonicalUrl={canonicalUrl}
      ogImage={ogImage}
      schema={schema}
      noindex={noindex}
    />

    <slot name="head" />
  </head>

  <body class="min-h-screen flex flex-col font-body text-stone-800 bg-white antialiased">
    <Header />

    <main class="flex-1">
      <slot />
    </main>

    <Footer />
  </body>
</html>
